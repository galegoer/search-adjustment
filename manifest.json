{
    "manifest_version": 2,
    "name": "Search Filters",
    "version": "1.0",
    "description": "Adjust your search filters for Google Search.",
    "browser_action": {
      "default_icon": "icons/border-48.png",
      "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "*://*.google.com/*"
    ],
    "icons": {
      "48": "icons/border-48.png"
    },
    "background": {
      "scripts": ["background.js"],
      "type": "module",
      "persistent": false
    }
  }
  